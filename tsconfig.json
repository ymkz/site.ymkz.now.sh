{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "h",
    "noEmit": true,
    "paths": { "~/*": ["./src/*"] },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
